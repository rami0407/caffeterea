rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to get user data
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    // Users collection
    match /users/{userId} {
      // قراءة بيانات المستخدم نفسه
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // المربي يقرأ جميع الطلاب
      allow read: if request.auth != null && 
                     getUserData().role == 'educator' &&
                     resource.data.role == 'student';
      
      // المقصف يقرأ جميع المستخدمين
      allow read: if request.auth != null && getUserData().role == 'cafeteria';
      
      // الأدمن يقرأ كل شيء
      allow read: if request.auth != null && getUserData().role == 'admin';
      
      // إنشاء حساب جديد (للتسجيل)
      allow create: if request.auth != null;
      
      // تعديل بيانات المستخدم نفسه
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // المربي يعدل رصيد الطالب فقط (للمكافآت)
      allow update: if request.auth != null && 
                       getUserData().role == 'educator' &&
                       resource.data.role == 'student' &&
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['balance']);
    }
    
    // Products
    match /products/{productId} {
      allow read: if true; // الكل يقرأ المنتجات
      allow write: if request.auth != null && getUserData().role == 'admin';
    }
    
    // Orders
    match /orders/{orderId} {
      // الطالب ينشئ طلبه
      allow create: if request.auth != null && 
                       request.resource.data.studentId == request.auth.uid;
      
      // الطالب يقرأ طلباته
      allow read: if request.auth != null && 
                     resource.data.studentId == request.auth.uid;
      
      // المقصف والأدمن يقرؤون كل الطلبات
      allow read: if request.auth != null && 
                     (getUserData().role == 'cafeteria' || getUserData().role == 'admin');
      
      // المقصف يحدث حالة الطلب
      allow update: if request.auth != null && getUserData().role == 'cafeteria';
    }
    
    // Transactions (المكافآت)
    match /transactions/{transactionId} {
      // المربي ينشئ مكافأة
      allow create: if request.auth != null && 
                       getUserData().role == 'educator' &&
                       request.resource.data.educatorId == request.auth.uid;
      
      // الطالب يقرأ مكافآته
      allow read: if request.auth != null && 
                     resource.data.studentId == request.auth.uid;
      
      // المربي يقرأ المكافآت التي أعطاها
      allow read: if request.auth != null && 
                     resource.data.educatorId == request.auth.uid;
      
      // الأدمن يقرأ كل شيء
      allow read: if request.auth != null && getUserData().role == 'admin';
    }
    
    // Weekly Points (للحد الأسبوعي)
    match /weeklyPoints/{limitId} {
      allow read, write: if request.auth != null && getUserData().role == 'educator';
    }
    
    // Counters
    match /counters/{counterId} {
      allow read, write: if request.auth != null;
    }
  }
}
